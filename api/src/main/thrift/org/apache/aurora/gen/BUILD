import os

TEST_DATA = globs('*test.thrift')

python_thrift_library(
  name = '_api',
  sources = [
    'api.thrift',
  ],
  dependencies = [
    'build-support/thrift',
  ],
)

python_thrift_library(
  name = '_test',
  sources = TEST_DATA,
  dependencies = [
    'build-support/thrift',
  ],
)

python_thrift_library(
  name = '_storage',
  sources = ['storage.thrift'],
  dependencies = [
    'build-support/thrift',
    ':_api',
  ],
)

python_library(
  dependencies = [
    ':_api',
    ':_test',
    ':_storage',
  ],
  provides = setup_py(
    name = 'apache.aurora.thrift',
    version = open(os.path.join(get_buildroot(), '.auroraversion')).read().strip().upper(),
    description = 'Autogenerated Aurora thrift schemas.',
  )
)
